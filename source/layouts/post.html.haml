- wrap_layout :application do
  - content_for :title do
    = current_page.title

  .post.container
    .row.header
      %h1= current_page.title

    .row.body
      .col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
        = find_and_preserve current_page.body

    .row.posted-time
      .col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
        = "Posted on #{current_page.date.strftime("%B %e, %Y")}."
