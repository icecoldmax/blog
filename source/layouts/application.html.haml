!!! 5
%html
  %head
    %title
      Ice Cold Max
    %meta{:charset => "UTF-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag "application", "syntax"
    %link{:href => "//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", :rel => "stylesheet"}
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,400,300", media: "all"
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed", title: "Atom Feed"

%body
  .container
    .navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %a.navbar-brand{href: "/"} Ice Cold Max

        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to "Posts", "/"

    #content
      = yield

    %hr

    %footer
      .container
        .row
          .hidden-xs.col-sm-1.col-sm-offset-1#faceshot
            = image_tag "profile.png"
          .col-xs-8.col-xs-offset-1.col-sm-offset-0#name-and-description
            %h4.name David Nettle
            %p.description Ruby Developer based in Sydney, Australia.
            %p.social
              %a{href:"https://twitter.com/icecoldmax"}
                %i.fa.fa-twitter.fa-2x

              %a.space{href:"https://github.com/icecoldmax"}
                %i.fa.fa-github-alt.fa-2x

  = javascript_include_tag :application
